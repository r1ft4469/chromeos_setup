            },
            {
                "function": "powerline.segments.common.time.date",
                "name": "time",
                "args": {
                    "format": "%H:%M",
                    "istime": true
                }
            },
            {
                "function": "powerline.segments.common.env.user"
            },
            {
                "function": "powerline.segments.common.env.environment",
                "args": {
                    "variable": "ip_addr"
                }
            }
        ]
    }
}
